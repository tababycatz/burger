<h1>Eat-A-Burger!</h1>

<h2>Burgers to Devour</h2>

<ul>
  {{#each burger}}
    {{#unless devour}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burger}}
    {{#if devour}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devour!</label><br>
    <input type="radio" name="eat" value="1" checked> Devour!<br>
    <input type="radio" name="eat" value="0"> Delete
  </div>

  <button type="submit">Add Burger</button>
</form>
