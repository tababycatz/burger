<h1>Eat-A-Burger!</h1>

<h2>Burgers to Devour</h2>

<ul>
  {{#each burger}}
    {{#unless devour}}
      {{!-- {{> cats/cat-block sleep=true}} this is using the code from partials --}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burger}}
    {{#if devour}}
      
      <li>
	{{name}}

	<button class="change-devour" data-id="{{id}}" data-neweat="{{sleep}}">
		{{#if devoured}}SLEEP TIME!{{else}}WAKE UP!{{/if}}
	</button>

	<button class="delete-cat" data-id="{{this.id}}">DELETE!</button>
</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
