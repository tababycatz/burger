<h1>Eat-A-Burger!</h1>

<h2>Burgers to Devour</h2>

<ul>
  {{#each burger}}
  {{#unless devoured}}
  {{this.id}}
  {{this.burger_name}}
  {{/unless}}
  {{/each}}
</ul>
<button class="change-devour" data-id="{{this.id}}" data-newdevour="{{devour}}">DEVOUR!</button>

<h2>Burgers Devoured!</h2>


<h2>Add a Burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>
  <br>

  <button type="submit">Add Burger</button>
</form>